<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ChooseEMILYActivity"
    android:id="@+id/phone_load_screen">

    <LinearLayout
        android:id="@+id/emilyHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            android:id="@+id/discover_button"
            android:layout_gravity="center_vertical" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chooseEmilyListView" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:alpha="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id = "@+id/progress_bar_layout">
            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_weight="1"
                android:indeterminate="true"
                android:layout_gravity="center|center_vertical|center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pref_connection_alert"
                android:gravity="center|center_vertical|center_horizontal"
                android:id="@+id/connection_status_msg"
                android:layout_gravity="center"
                android:textSize="@dimen/abc_text_size_display_1_material" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text = "@string/pref_return_to_menu"
                android:onClick="removeOverlay"
                android:textSize="@dimen/abc_text_size_button_material" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
